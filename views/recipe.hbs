<div id="dropdown-sort">
    <div>
        <form action="" id="sort-form">
            <label for="sort">Sort: </label>
            <select name="sort" id="sort-select" onchange="sortItem(this)">
                <option value="ascending">Ascending</option>
                <option value="descending">Descending</option>
            </select>
            <br /><br />

            <!-- <input type="submit" value="Submit" /> -->
        </form>
    </div>
</div>


<div class="body">

    <div id="content">
        <div>
            <ul>
                {{#each data}}
                {{#if (if_even @index)}}
                <li>
                    <a href="index.html"><img src="{{dataValues.smallImagePath}}" alt="Image" /></a>
                    <div>
                        <h3><a href="featured.html">{{dataValues.title}}</a></h3>
                        <p>
                            {{dataValues.description}}
                        </p>
                    </div>
                </li>
                {{else}}
                <li>
                    <a href="index.html"><img src="{{dataValues.smallImagePath}}" alt="Image" /></a>
                    <div>
                        <h3><a href="featured.html">{{dataValues.title}}</a></h3>
                        <div>
                            <p>
                                {{dataValues.description}}
                            </p>
                            <ul>
                                <li>This is just a place holder</li>
                                <li>This is just a place holder</li>
                                <li>This is just a place holder</li>
                                <li>This is just a place holder</li>
                            </ul>
                        </div>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<script src="/scripts/sort.js"></script>